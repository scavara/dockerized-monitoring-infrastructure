  server {
    listen 80;
    server_name monitoring.YOUR_DOMAIN;
    return 301 https://$host$request_uri;
  }

  server {
    listen 443 ssl http2;
    server_name monitor2.YOUR_DOMAIN;
    
    ssl_session_cache builtin:1000 shared:SSL:50m;
    ssl_session_tickets on;
    ssl_session_cache shared:SSL:50m;
    ssl_session_timeout 5m;

    ssl_certificate /etc/nginx/certs.d/YOUR_PROPER.crt;
    ssl_certificate_key /etc/nginx/certs.d/YOUR_PROPER.key;

    root /usr/share/nginx/www;
    index index.html index.htm;

    location / {
      proxy_buffering on;
      proxy_buffer_size 8k;  
      proxy_pass http://grafana:3000/;
      # Relax "413 Request Entity Too Large"
      client_max_body_size 20M;

      # If upstream is slow
      proxy_send_timeout          5m;
      proxy_read_timeout          5m;

      # If downstream is slow
      client_body_timeout 5m;
      send_timeout 5m;
    }

    # Performance parameters
    # Relax "414 Request-URI Too Large"
    large_client_header_buffers 6 16k;
  } 

  server {
    listen 80;
    server_name p8s-registry.YOUR_DOMAIN;
    return 301 https://$host$request_uri;
  }

  server {
    listen 443 ssl;
    server_name p8s-registry.YOUR_DOMAIN;

    ssl_certificate /etc/nginx/certs.d/YOUR_PROPER.crt;
    ssl_certificate_key /etc/nginx/certs.d/YOUR_PROPER.key;

   location /v2 {
     client_max_body_size 1000M;
     proxy_pass http://registry:5000/v2;
   }

   location /auth {
     proxy_pass https://registry_auth:5001/auth;
   }

   location / {
     proxy_pass https://registry_auth:5001;
   }
  } 
 
  server {
    listen 80;
    server_name p8s-master.YOUR_DOMAIN;
    return 301 https://$host$request_uri;
  }

  server {
    listen 443 ssl;
    server_name p8s-master.YOUR_DOMAIN;

    ssl_certificate /etc/nginx/certs.d/YOUR_PROPER.crt;
    ssl_certificate_key /etc/nginx/certs.d/YOUR_PROPER.key;


    location /oauth2/ {
      proxy_pass       http://oauth2_proxy:4180;
      proxy_set_header Host                    $host;
      proxy_set_header X-Real-IP               $remote_addr;
      proxy_set_header X-Scheme                $scheme;
      proxy_set_header X-Auth-Request-Redirect $request_uri;
    }
    
    location = /oauth2/auth {
      proxy_pass       http://oauth2_proxy:4180;
      proxy_set_header Host             $host;
      proxy_set_header X-Real-IP        $remote_addr;
      proxy_set_header X-Scheme         $scheme;
      # nginx auth_request includes headers but not body
      proxy_set_header Content-Length   "";
      proxy_pass_request_body           off;
    }
  
  
    location / {
      auth_request /oauth2/auth;
      error_page 401 = /oauth2/sign_in;

      auth_request_set $user   $upstream_http_x_auth_request_user;
      auth_request_set $email  $upstream_http_x_auth_request_email;
      proxy_set_header X-User  $user;
      proxy_set_header X-Email $email;
      auth_request_set $auth_cookie $upstream_http_set_cookie;
      add_header Set-Cookie $auth_cookie;

      proxy_pass http://prometheus:9090;
    }

    location /alertmanager/ {
      auth_request /oauth2/auth;
      error_page 401 = /oauth2/sign_in;

      auth_request_set $user   $upstream_http_x_auth_request_user;
      auth_request_set $email  $upstream_http_x_auth_request_email;
      proxy_set_header X-User  $user;
      proxy_set_header X-Email $email;
      auth_request_set $auth_cookie $upstream_http_set_cookie;
      add_header Set-Cookie $auth_cookie; rewrite_log off;
      rewrite ^/alertmanager(.*) $1 break;
      proxy_pass http://alertmanagers;
      proxy_redirect off;
    }
    
  }
