groups:
- name: YOUR_COMPANY 
  rules:
## net
  - record: net_bytes_recv2
    expr: irate(net_bytes_recv[60s])
    labels:
      p8s_recorder: true

  - record: net_bytes_sent2
    expr: irate(net_bytes_sent[60s])
    labels:
      p8s_recorder: true

  - record: net_packets_recv2
    expr: irate(net_packets_recv[60s])
    labels:
      p8s_recorder: true

  - record: net_packets_sent2
    expr: irate(net_packets_sent[60s])
    labels:
      p8s_recorder: true

## diskio
  - record: diskio_read_bytes2
    expr: irate(diskio_read_bytes[60s])
    labels:
      p8s_recorder: true

  - record: diskio_write_bytes2
    expr: irate(diskio_write_bytes[60s])
    labels:
      p8s_recorder: true

  - record: diskio_read_time2
    expr: irate(diskio_read_time[60s])
    labels:
      p8s_recorder: true

  - record: diskio_write_time2
    expr: irate(diskio_write_time[60s])
    labels:
      p8s_recorder: true

